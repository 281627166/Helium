<?xml version="1.0"?>
<!DOCTYPE database SYSTEM "litesql.dtd"> 
<database name="AssetCacheDB" namespace="Luna" include="AssetCacheDB.hpp">
	
	<object name="CacheEntry">
		<field name="mPath" type="string" />
	</object>
	
	<object name="IndexDatum">
		<field name="mKey" type="string" />
	</object>
	
	<relation name="IndexData">
		<relate object="IndexDatum" />
		<relate object="CacheEntry" limit="many" handle="indexdata"/>
		<field name="mValue" type="string" />
	</relation>
	
	<relation name="FileReferences" unidir="true">
		<relate object="CacheEntry" />
		<relate object="CacheEntry" handle="fileReferences"/>
	</relation>
	
</database>